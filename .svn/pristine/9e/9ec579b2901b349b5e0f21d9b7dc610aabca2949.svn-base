<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="500"
            android:id="@+id/view">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="0"
                sl:scale_left="0"
                sl:scale_height="70"
                sl:scale_width="720"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="Insert Evaluation"
                android:gravity="center"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="70"
                sl:scale_left="70"
                sl:scale_height="120"
                sl:scale_width="550"
                android:numStars="5"
                android:stepSize="0.5"
                android:id="@+id/inputEvalPoint"
                android:gravity="center"
                />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inputEvalNote"
                sl:scale_left="75"
                sl:scale_top="210"
                sl:scale_height="100"
                sl:scale_width="545"
                sl:scale_textsize="30"
                android:background="#FFFFFF"
                android:textColor="@android:color/black"

                android:hint="Insert Evaluation Note"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="350"
                sl:scale_left="100"
                sl:scale_height="100"
                sl:scale_width="200"
                sl:scale_textsize="30"
                android:id="@+id/inputEvalOk"
                android:text="OK"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="350"
                sl:scale_left="390"
                sl:scale_height="100"
                sl:scale_width="200"
                sl:scale_textsize="30"
                android:id="@+id/inputEvalCancel"
                android:text="Cancel"
                />
        </widget.ScalableLayout>
</RelativeLayout>