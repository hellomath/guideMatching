<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:background="@drawable/background_img">

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="1280"
            android:layout_centerVertical="true"
            android:id="@+id/view">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcmCourseForGuide"
                sl:scale_left="0"
                sl:scale_top="200"
                sl:scale_height="330"
                sl:scale_width="310"
                sl:scale_textsize="30"
                android:text="회원가입"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/guide_rcmcourse"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scdForGuide"
                sl:scale_left="410"
                sl:scale_top="200"
                sl:scale_height="330"
                sl:scale_width="310"
                sl:scale_textsize="30"
                android:text="회원가입"
                android:src="@drawable/guide_schedule"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friendListForGuide"
                sl:scale_left="0"
                sl:scale_top="630"
                sl:scale_height="330"
                sl:scale_width="310"
                sl:scale_textsize="30"
                android:text="회원가입"
                android:src="@drawable/guide_friend_list"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/langForGuide"
                sl:scale_left="410"
                sl:scale_top="630"
                sl:scale_height="330"
                sl:scale_width="310"
                sl:scale_textsize="30"
                android:text="회원가입"
                android:src="@drawable/guide_language"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                />

    </widget.ScalableLayout>
</RelativeLayout>