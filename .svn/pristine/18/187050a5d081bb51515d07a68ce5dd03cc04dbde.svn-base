<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="470"
            android:id="@+id/view">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friendInfo"
                sl:scale_top="20"
                sl:scale_left="75"
                sl:scale_height="150"
                sl:scale_width="545"
                sl:scale_textsize="30"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:text="김지웅\n한국어/영어"
                android:gravity="center"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friendChat"
                sl:scale_left="75"
                sl:scale_top="200"
                sl:scale_height="100"
                sl:scale_width="545"
                sl:scale_textsize="30"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/friend_chat"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friendSchedule"
                sl:scale_left="75"
                sl:scale_top="330"
                sl:scale_height="100"
                sl:scale_width="250"
                sl:scale_textsize="30"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/friend_schedule"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friendDetail"
                sl:scale_left="370"
                sl:scale_top="330"
                sl:scale_height="100"
                sl:scale_width="250"
                sl:scale_textsize="30"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/friend_detail"/>


        </widget.ScalableLayout>


</RelativeLayout>