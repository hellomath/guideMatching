<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="650"
            android:id="@+id/view">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="0"
                sl:scale_left="0"
                sl:scale_height="70"
                sl:scale_width="720"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="Recommend Course"
                android:gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_left="75"
                sl:scale_top="75"
                sl:scale_height="50"
                sl:scale_width="545"
                sl:scale_textsize="30"
                android:text="Tour Area"
                android:textColor="#FFFFFF"
                />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcmLocationDetail"
                sl:scale_left="75"
                sl:scale_top="125"
                sl:scale_height="100"
                sl:scale_width="545"
                sl:scale_textsize="30"
                android:text="China Town -> Wolmido -> Guwol-Dong -> Mansu-Dong"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:maxLines="3"
                android:editable="false"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_left="75"
                sl:scale_top="250"
                sl:scale_height="50"
                sl:scale_width="545"
                sl:scale_textsize="30"
                android:text="Course Note"
                android:textColor="#FFFFFF"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcmNoteDetail"
                sl:scale_left="75"
                sl:scale_top="300"
                sl:scale_height="200"
                sl:scale_width="545"
                sl:scale_textsize="30"
                android:text="가나다라마바사아자차카타파하"
                android:background="#FFFFFF"
                android:textColor="#000000"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/rcmOkBtn"
                sl:scale_left="250"
                sl:scale_top="530"
                sl:scale_height="100"
                sl:scale_textsize="50"
                sl:scale_width="200"
                />

        </widget.ScalableLayout>

</RelativeLayout>