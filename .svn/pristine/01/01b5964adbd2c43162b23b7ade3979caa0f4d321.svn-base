<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#353030"
        >

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="200"
            android:id="@+id/view">



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideName"
                sl:scale_top="0"
                sl:scale_left="0"
                sl:scale_height="70"
                sl:scale_width="500"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="Item Name"
                android:gravity="left"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideArea"
                sl:scale_top="70"
                sl:scale_left="0"
                sl:scale_height="50"
                sl:scale_width="500"
                sl:scale_textsize="40"
                android:textColor="#FFFFFF"
                android:text="Siheung-si"
                android:gravity="left"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="120"
                sl:scale_left="0"
                sl:scale_height="50"
                sl:scale_width="500"
                sl:scale_textsize="40"
                android:id="@+id/guideUseLang"
                android:text="Korean, English"
                />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideAddFriend"
                sl:scale_left="500"
                sl:scale_top="10"
                sl:scale_height="180"
                sl:scale_width="180"
                sl:scale_textsize="30"
                android:text="회원가입"
                android:src="@drawable/guide"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                />

    </widget.ScalableLayout>


</RelativeLayout>