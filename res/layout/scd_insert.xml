<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_img"
        >

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="1280"
            android:layout_centerVertical="true"
            android:id="@+id/view">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_left="0"
                sl:scale_top="120"
                sl:scale_height="60"
                sl:scale_width="200"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="Title"
                android:gravity="left"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcmLocationInsert"
                sl:scale_top="120"
                sl:scale_left="220"
                sl:scale_height="60"
                sl:scale_width="500"
                sl:scale_textsize="50"
                android:textColor="#343030"
                android:background="#FFFFFF"
                android:hint="추천 코스를 입력하세요."
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_left="0"
                sl:scale_top="200"
                sl:scale_height="60"
                sl:scale_width="200"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="Date"
                android:gravity="left"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcmTimeInsert"
                sl:scale_top="200"
                sl:scale_left="220"
                sl:scale_height="60"
                sl:scale_width="500"
                sl:scale_textsize="50"
                android:textColor="#343030"
                android:background="#FFFFFF"
                android:inputType="date"
                android:hint="예상 시간을 입력하세요."/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_left="0"
                sl:scale_top="280"
                sl:scale_height="60"
                sl:scale_width="200"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="Note"
                android:gravity="left"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcmNoteInsert"
                sl:scale_top="350"
                sl:scale_left="0"
                sl:scale_height="600"
                sl:scale_width="720"
                sl:scale_textsize="50"
                android:textColor="#343030"
                android:background="#FFFFFF"
                android:hint="내용을 입력하세요."
                android:gravity="left"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="1000"
                sl:scale_left="20"
                sl:scale_height="150"
                sl:scale_width="250"
                sl:scale_textsize="30"
                android:id="@+id/rcmOkInsert"
                android:text="입력"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="1000"
                sl:scale_left="450"
                sl:scale_height="150"
                sl:scale_width="250"
                sl:scale_textsize="30"
                android:id="@+id/rcmCancelInsert"
                android:text="취소"
                />


    </widget.ScalableLayout>


</RelativeLayout>