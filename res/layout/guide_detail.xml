<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#353030"
        >

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="1280"
            android:layout_centerVertical="true"
            android:id="@+id/view">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gpsLocationOfGuideDetail"
                sl:scale_top="30"
                sl:scale_left="30"
                sl:scale_height="135"
                sl:scale_width="675"
                sl:scale_textsize="50"
                android:textColor="#343030"
                android:background="#FFFFFF"
                android:text="Loading Location.."
                android:gravity="center"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideNameDetail"
                sl:scale_top="205"
                sl:scale_left="30"
                sl:scale_height="70"
                sl:scale_width="450"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="Item Name"
                android:gravity="left"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideAreaDetail"
                sl:scale_top="275"
                sl:scale_left="30"
                sl:scale_height="50"
                sl:scale_width="450"
                sl:scale_textsize="30"
                android:textColor="#FFFFFF"
                android:text="Siheung-si"
                android:gravity="left"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="325"
                sl:scale_left="30"
                sl:scale_height="50"
                sl:scale_width="450"
                sl:scale_textsize="30"
                android:id="@+id/guideUseLangDetail"
                android:text="Korean, English"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideAddFriendDetail"
                sl:scale_top="215"
                sl:scale_left="500"
                sl:scale_height="180"
                sl:scale_width="180"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideInfoDetail"
                sl:scale_top="450"
                sl:scale_left="30"
                sl:scale_height="135"
                sl:scale_width="675"
                sl:scale_textsize="50"
                android:textColor="#343030"
                android:background="#FFFFFF"
                android:text="Address"
                android:gravity="center"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideInfoDetail"
                sl:scale_top="635"
                sl:scale_left="30"
                sl:scale_height="70"
                sl:scale_width="675"
                sl:scale_textsize="50"
                android:textColor="#343030"
                android:background="#FFFFFF"
                android:text="Recommend Course"
                android:gravity="center"/>

        <ListView
                android:id="@+id/android:list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                sl:scale_top="710"
                sl:scale_left="30"
                sl:scale_height="550"
                sl:scale_width="675"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"/>

    </widget.ScalableLayout>


</RelativeLayout>