<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:sl="http://schemas.android.com/apk/res/com.kimtajo.guideMatching"
                android:id="@+id/main_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#353030"
        >

    <widget.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            sl:scale_base_width="720"
            sl:scale_base_height="200"
            android:id="@+id/view">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scdName"
                sl:scale_top="0"
                sl:scale_left="0"
                sl:scale_height="70"
                sl:scale_width="720"
                sl:scale_textsize="50"
                android:textColor="#FFFFFF"
                android:text="City Tour"
                android:gravity="left"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scdDatetime"
                sl:scale_top="60"
                sl:scale_left="0"
                sl:scale_height="50"
                sl:scale_width="720"
                sl:scale_textsize="40"
                android:textColor="#FFFFFF"
                android:text="Seoul City hall"
                android:gravity="left"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="110"
                sl:scale_left="0"
                sl:scale_height="40"
                sl:scale_width="720"
                sl:scale_textsize="30"
                android:id="@+id/scdInfo"
                android:text="Seoul City Hall visit asdasdas"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="145"
                sl:scale_left="0"
                sl:scale_height="40"
                sl:scale_width="720"
                sl:scale_textsize="30"
                android:id="@+id/scdEntry"
                android:text="5 people"
                />


    </widget.ScalableLayout>


</RelativeLayout>